<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEditContact">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:padding="5sp">

    <!--        circle image for profile image-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileIv"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:src="@drawable/baseline_person_24"
        android:layout_gravity="center"
        app:civ_border_width='1sp'/>

    <!--        edit text for input-->
    <EditText
        android:id="@+id/nameEt"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Name"
        android:inputType="textPersonName"
        android:padding="10sp"
        android:layout_margin="10sp"
        android:drawableStart="@drawable/baseline_text_fields_24"
        android:drawablePadding="5sp"
        android:textSize="14sp"/>

    <!--edit text for phone input-->
    <EditText
        android:id="@+id/phoneEt"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Phone"
        android:inputType="phone"
        android:padding="10sp"
        android:layout_margin="10sp"
        android:drawableStart="@drawable/baseline_phone_24"
        android:drawablePadding="5sp"
        android:textSize="14sp"
        />

    <!--edit text for email input-->
    <EditText
        android:id="@+id/emailEt"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10sp"
        android:layout_margin="10sp"
        android:drawableStart="@drawable/baseline_email_24"
        android:drawablePadding="5sp"
        android:textSize="14sp"/>

    <!--edit text for note input-->
    <EditText
        android:id="@+id/noteEt"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Note"
        android:inputType="textLongMessage"
        android:padding="10sp"
        android:layout_margin="10sp"
        android:drawableStart="@drawable/baseline_note_24"
        android:drawablePadding="5sp"
        android:textSize="14sp"/>


</LinearLayout>



    <!--    fab button for add contact in app-->
<com.google.android.material.floatingactionbutton.FloatingActionButton
android:id="@+id/fab"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentEnd="true"
android:layout_alignParentBottom="true"
android:layout_marginStart="10sp"
android:layout_marginTop="10sp"
android:layout_marginEnd="10sp"
android:layout_marginBottom="10sp"
android:contentDescription="TODO"
android:elevation="5sp"
android:src="@drawable/baseline_add_24"
app:pressedTranslationZ="10sp"
app:tint="@color/white" />

</RelativeLayout>