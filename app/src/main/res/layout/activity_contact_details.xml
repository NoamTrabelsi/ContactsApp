<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/profileIv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/baseline_person_24"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Noam Trabelsi"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/noteTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="This is for note area This is for note area"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:stretchColumns="2">
            <TableRow>

                <TextView
                    android:text="Phone:"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/phoneTv"
                    tools:text="052-5563384"
                    android:textSize="@dimen/_14sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textStyle="bold"/>


            </TableRow>

            <TableRow>
                <TextView
                    android:text="Email:"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/emailTv"
                    tools:text="Noam2301@gmail.com"
                    android:textSize="@dimen/_14sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textStyle="bold"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Added Time:"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/addedTimeTv"
                    tools:text="052-5563384"
                    android:textSize="@dimen/_14sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textStyle="bold"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Updated Time:"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/updatedTimeTv"
                    tools:text="052-5563384"
                    android:textSize="@dimen/_14sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textStyle="bold"/>
            </TableRow>

        </TableLayout>
    </LinearLayout>

</RelativeLayout>